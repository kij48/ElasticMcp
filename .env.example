# Elasticsearch Configuration
ELASTICSEARCH_NODE=https://localhost:9200
ELASTICSEARCH_API_KEY=your_api_key_here
# OR use username/password authentication
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_password_here

# Optional: Default index pattern to search
ELASTICSEARCH_INDEX_PATTERN=logs-*

# Optional: Correlation ID field name (default: correlation_id)
CORRELATION_ID_FIELD=correlation_id

# PII Masking Configuration
# Enable/disable PII masking (default: false)
PII_MASKING_ENABLED=true

# Individual PII type masking (all enabled by default when PII_MASKING_ENABLED=true)
# Set to 'false' to disable specific types
PII_MASK_CPR=true           # Danish CPR numbers (XXXXXX-XXXX)
PII_MASK_EMAIL=true         # Email addresses
PII_MASK_PHONE=true         # Phone numbers
PII_MASK_CREDIT_CARD=true   # Credit card numbers
PII_MASK_SSN=true           # Social security numbers
